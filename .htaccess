ErrorDocument 404 /404.php
ErrorDocument 403 /403.php

RewriteEngine On

RewriteRule ^help$ help.php [L,QSA]
RewriteRule ^help/([a-zA-Z0-9_-]+)$ help.php?q=$1 [L,QSA]
RewriteRule ^profile/(.*)?(.*)$ profile.php?account=$1&$2 [L,QSA]
RewriteRule ^auth$ auth.php?mode=login
RewriteRule ^auth/login(.*)$ auth.php?$1&mode=login [L,QSA]
RewriteRule ^auth/register(.*)$ auth.php?$1&mode=register [L,QSA]
RewriteRule ^profile-edit()$ profile-edit.php [L,QSA]
RewriteRule ^coupons$ coupons.php [L,QSA]
RewriteRule ^logout$ logout.php [L,QSA]
RewriteRule ^profiles-list$ profiles-list.php [L,QSA]

# 403
Options -Indexes
RewriteRule ^inc/ - [F,L]
RewriteRule ^backend/$ - [F,L]
RewriteRule ^.env.sample$ - [F,L]
RewriteRule ^composer\.json$ - [F,L]
RewriteRule ^composer\.lock$ - [F,L]
RewriteRule ^vendor/$ - [F,L]
RewriteRule ^docker-compose\.yml$ - [F,L]
RewriteRule ^readme\.md$ - [F,L]
RewriteRule ^license$ - [F,L]
RewriteRule ^\.gitignore$ - [F,L]
RewriteRule ^\.env$ - [F,L]
RewriteRule ^docker/$ - [F,L]
RewriteRule ^api/$ - [F,L]